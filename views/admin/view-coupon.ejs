<%- include("partial/header") %>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("partial/sidebar") %>


            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include("partial/top-nav") %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">View Coupons</h1>
                            </div>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">All Coupons</h6>
                                </div>
                                <div class="card-body">
                                    <% if (message.length > 0) { %>
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <strong>Hey... </strong>
                                            <%- message %>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                              <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <% } %>
                                            <div class="table-responsive">
                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Coupon Code</th>
                                                            <th>Discount Amount</th>
                                                            <th colspan="2">Operation</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if(displayData.length > 0) {
                                                for(data of displayData) {
                                                %>
                                                            <tr>
                                                                <td>
                                                                    <%- data._id %>
                                                                </td>
                                                                <td>
                                                                    <%- data.couponCode %>
                                                                </td>
                                                                <td>
                                                                    <%- data.discount %>
                                                                </td>
                                                                <td><a href="delete-coupon/<%- data._id %>" class="btn btn-outline-danger">Delete</a></td>
                                                                <% if(data.isActive) { %>
                                                                    <td><a href="deactivate-coupon/<%- data._id %>" class="btn btn-danger" data-id="<%= data._id %>">Deactive</a></td>
                                                                    <% } else{%>
                                                                        <td><a href="activate-coupon/<%- data._id %>" class="btn btn-info" data-id="<%= data._id %>">Active</a></td>
                                                                        <% } %>
                                                            </tr>
                                                            <% } } %>
                                                </table>
                                            </div>
                                </div>
                            </div>

                        </div>
                        <!-- End Begin Page Content -->
                </div>
                <!-- End of Main Content -->

                <%- include("partial/footer") %>