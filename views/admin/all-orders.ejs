<%- include("partial/header") %>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("partial/sidebar") %>


            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include("partial/top-nav") %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">View Categories</h1>
                            </div>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Product Categories</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Full Name</th>
                                                    <th>Email</th>
                                                    <th>Contact</th>
                                                    <th>Delivery Address</th>
                                                    <th>Products</th>
                                                    <th>Price</th>
                                                    <th>Quantity</th>
                                                    <th>Sub Total</th>
                                                    <th>Shipping</th>
                                                    <th>Discount</th>
                                                    <th>Total</th>

                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% if(displayData.length > 0) {
                                                for(data of displayData) {
                                                %>
                                                    <tr>
                                                        <td>
                                                            <%- data.orderDate %>
                                                        </td>
                                                        <td>
                                                            <%- data.name %>
                                                        </td>
                                                        <td>
                                                            <%- data.user.email %>
                                                        </td>
                                                        <td>
                                                            <%- data.user.contactNo %>
                                                        </td>
                                                        <td>
                                                            <%- data.address %>
                                                        </td>
                                                        <td>
                                                            <% for(product of data.product) {%>
                                                                <%- product.productName %> <br>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <% for(product of data.product) {%>
                                                                <%- product.price %> <br>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <% for(quant of data.quantity) {%>
                                                                <%- quant %> <br>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <%- data.subTotal %>
                                                        </td>
                                                        <td>
                                                            <%- data.shipping %>
                                                        </td>
                                                        <td>
                                                            <%-(data.discount*data.total)/100 %>
                                                        </td>
                                                        <td>
                                                            <%- data.total - (data.discount*data.total)/100 %>
                                                        </td>
                                                    </tr>
                                                    <% } } %>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- End Begin Page Content -->
                </div>
                <!-- End of Main Content -->

                <%- include("partial/footer") %>